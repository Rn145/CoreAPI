{
  "name": "core-api",
  "version": "0.0.0",
  "description": "Easy API to communicate betwen a renderer process to the main process.",
  "main": "./dist/src",
  "module": "./dist/src",
  "author": "Ruslan Fazilzyanov (Ruslan145)",
  "private": "false",
  "files": [
    "dist",
    "package.json",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "build": "tsc && tsc-alias && cpy ./test/renderer.html ./dist",
    "test": "npm run build && electron ./dist/test/main.js",
    "build:test": "electron-builder"
  },
  "build": {
    "appId": "core-api-present",
    "directories": {
      "output": "./build"
    },
    "extraResources": [
      "./src",
      "./test"
    ]
  },
  "devDependencies": {
    "@types/node": "^14.14.7",
    "cpy-cli": "^5.0.0",
    "electron": "^26.2.4",
    "electron-builder": "^24.6.4",
    "tsc-alias": "^1.8.7",
    "typescript": "^4.0.5"
  },
  "keywords": [
    "electron",
    "api",
    "ipc",
    "ipcRenderer",
    "ipcMain",
    "events",
    "methods"
  ],
  "license": "ISC"
}
